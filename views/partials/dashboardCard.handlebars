<div data-post-id="{{this.id}}" id="{{this.id}}" class="blog-post block max-w-sm p-2 bg-white border border-gray-200 rounded-lg shadow hover:bg-blue-300">
<div class="flex justify-between">
<h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 ">{{this.title}}</h5>
<p>{{formatDate this.postDate}}</p>
</div>
<div data-post-id="{{this.id}}" class="edit-form hidden">
<textarea class="w-full p-1">{{this.description}}</textarea>
<button class="update-btn w-full my-1 bg-indigo-800 hover:bg-indigo-500 text-white p-1 rounded-md">Update</button>
<button class="delete-btn w-full my-1 bg-red-600 hover:bg-red-400 text-white p-1 rounded-md">Delete</button>
</div>
</div>